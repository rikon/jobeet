{% extends 'IbwJobeetBundle::layout.html.twig' %}

{% block title %}
    Jobs in the {{ category.name }} category
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/ibwjobeet/css/jobs.css') }}" type="text/css" media="all" />
{% endblock %}


{% block content %}
    <div class="category">
        <div class="feed">
            <a href="">Feed</a>
        </div>
        <h1>{{ category.name }}</div>
    </div>
    
    {{ include('IbwJobeetBundle:Job:list.html.twig', {'jobs': category.activejobs}) }}
    
    {% if last_page > 1 %}
    <div class="pagination">
    	<a href="{{ path('ibw_jobeet_category', {'slug':category.slug, 'page':1}) }}"><img src="{{ asset('bundles/ibwjobeet/images/first.png') }}" title="First page"/></a>
    	<a href="{{ path('ibw_jobeet_category', {'slug':category.slug, 'page':previous_page}) }}"><img src="{{ asset('bundles/ibwjobeet/images/previous.png') }}" title=""Previous page/></a>
    	
    	{% for page in 1..last_page %}
    		{% if page == current_page %}
    			{{ page }}
    		{% else %}
    			<a href="{{ path('ibw_jobeet_category', {'slug':category.slug, 'page':page}) }}">{{ page }}</a>
    		{% endif %}
    	{% endfor %}
    	
    	<a href="{{ path('ibw_jobeet_category', {'slug':category.slug, 'page':next_page}) }}"><img src="{{ asset('bundles/ibwjobeet/images/next.png') }}" title="Next page"/></a>
    	<a href="{{ path('ibw_jobeet_category', {'slug':category.slug, 'page':last_page}) }}"><img src="{{ asset('bundles/ibwjobeet/images/last.png') }}" title="Last page"/></a>
    </div>
    {% endif %}
    
    <div class="pagination_desc">
    	<strong>{{ total_jobs }}</strong> jobs in the cateogry
    	{% if last_page > 1 %}
    		- page <strong>{{ current_page }}/{{ last_page }}</strong>
    	{% endif %}
    </div>
    
    
{% endblock %}